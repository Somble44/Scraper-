# Write header to CSV file
with open('amazon_products_prices.csv', 'w', newline='', encoding='UTF8') as f:
    writer = csv.writer(f)
    writer.writerow(['Title', 'Price', 'Date'])

# Check prices periodically
while True:
    check_prices(products)
    time.sleep(10)
